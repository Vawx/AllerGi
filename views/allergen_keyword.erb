<h1>Add a keyword to <%=@restaurant.restaurant_name() %></h1>

<form action="/restaurants/<%= @restaurant.id() %>/keywords/new" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="restaurant_name"></label>
  <input id="restaurant_name" name="restaurant_name" type="hidden" value="<%= @restaurant.restaurant_name %>">

  <label for="keyword_id">Select A keyword</label>
  <select id ="keyword_id" name="keyword_id">
    <% Keyword.all.each do |keyword| %>
      <option id="<%= keyword.keyword_name %>" value="<%= keyword.id %>"><%= keyword.keyword_name %></option>
    <% end %>
  </select><br>

  <button type="submit">Add Keyword</button>
</form>
