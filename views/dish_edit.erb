<h1>Edit the dish:</h1>

<form action="/dishes/<%= @dish.id() %>" method="post">

  <input name="_method" type="hidden" value="patch">

  <label for="dish_name">Rename your dish:</label>
  <input id="dish_name" name="dish_name" type="text" value="<%= @dish.dish_name %>"><br>

  <button type="submit">Rename</button>
</form>

