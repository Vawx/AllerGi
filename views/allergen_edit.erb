<h1>Edit the allergen:</h1>

<form action="/allergens/<%= @allergen.id() %>" method="post">

  <input name="_method" type="hidden" value="patch">

  <label for="allergen_name">Rename your allergen:</label>
  <input id="allergen_name" name="allergen_name" type="text" value="<%= @allergen.allergen_name %>"><br>

  <button type="submit">Rename</button>
</form>
