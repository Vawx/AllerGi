<h1 style="text-align:center;">Add a menu to: <%= @restaurant.name %></h1>
<div class="container">
  <div class="col-xs-6 col-xs-offset-3">
    <div class="well">
      <form class="" action="/menu/<%=@restaurant.id%>" method="post">
        <div id="dish_div0" class="" style="text-align:center;">
          <button type="button" onclick="add_another_dish();" name="button">+</button>
          <input id="dish_name" type="text" name="dish_name0" value="" placeholder="Dish name...">
          <input id="ingredient_name" type="text" name="ingredients_name0" value="" placeholder="Ingredients...">
        </div>
        <div class="container" id="submit">
          <button type="submit" class="btn btn-default" name="button">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript">
  var current_div_additions = 0;
  function add_another_dish( )
  {
      var original = document.getElementById('dish_div' + current_div_additions)
      var clone = original.cloneNode(true);
      current_div_additions += 1;
      clone.id = "dish_div" + current_div_additions;

      clone.children[1].name = "dish_name" + current_div_additions;
      clone.children[2].name = "ingredient_name" + current_div_additions;
      original.appendChild(clone);
  }
</script>
