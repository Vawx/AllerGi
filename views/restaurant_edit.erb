<h1>Edit the restaurant:</h1>

<form action="/restaurants/<%= @restaurant.id() %>" method="post">

  <input name="_method" type="hidden" value="patch">

  <label for="restaurant_name">Rename your restaurant:</label>
  <input id="restaurant_name" name="restaurant_name" type="text" value="<%= @restaurant.restaurant_name %>"><br>

  <button type="submit">Rename</button>
</form>
